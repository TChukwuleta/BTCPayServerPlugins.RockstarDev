@model BTCPayServer.RockstarDev.Plugins.Subscriptions.Data.Models.Subscription
@{
    ViewData["Title"] = "Edit Subscription";
}

<h2>Edit Subscription</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Customer</label>
        <select asp-for="CustomerId" asp-items="@(new SelectList(ViewBag.Customers, "Id", "Name"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Product</label>
        <select asp-for="ProductId" asp-items="@(new SelectList(ViewBag.Products, "Id", "Name"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Expires"></label>
        <input asp-for="Expires" class="form-control" type="date" required />
    </div>

    <div class="form-group">
        <label asp-for="State"></label>
        <select asp-for="State" asp-items="Html.GetEnumSelectList<BTCPayServer.RockstarDev.Plugins.Subscriptions.Data.Models.SubscriptionStates>()" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="PaymentRequestId"></label>
        <input asp-for="PaymentRequestId" class="form-control" placeholder="Optional Payment Request ID" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
