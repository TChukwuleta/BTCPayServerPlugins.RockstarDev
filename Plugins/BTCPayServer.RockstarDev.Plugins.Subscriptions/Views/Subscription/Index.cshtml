@using BTCPayServer.RockstarDev.Plugins.Subscriptions
@model List<BTCPayServer.RockstarDev.Plugins.Subscriptions.Data.Models.Subscription>
@inject IScopeProvider ScopeProvider
@{
    var storeId = ScopeProvider.GetCurrentStoreId();
    ViewData.SetActivePage(SubscriptionPlugin.SubscriptionPluginNavKey, "Subscriptions", "Subscriptions");
}

<form method="post">
    <div class="sticky-header-setup"></div>
    <div class="sticky-header d-sm-flex align-items-center justify-content-between">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <div class="d-flex gap-3 mt-3 mt-sm-0">
            <a asp-controller="Customer" asp-action="Create" asp-route-storeId="@storeId"
               class="btn btn-primary">Create New Subscription</a>
        </div>
    </div>
</form>

<partial name="_StatusMessage" />

@if (Model.Any())
{
    <div class="table-responsive-md">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Customer</th>
                <th>Product</th>
                <th>Created</th>
                <th>Expires</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var subscription in Model)
            {
                <tr>
                    <td>@subscription.Customer?.Name</td>
                    <td>@subscription.Product?.Name</td>
                    <td>@subscription.Created.ToString("g")</td>
                    <td>@subscription.Expires.ToString("g")</td>
                    <td>@subscription.State</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@subscription.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@subscription.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-secondary mt-4">
        <!-- CSV Upload Form -->
        <form asp-action="ImportSubscriptions" asp-controller="Subscription" asp-route-storeid="@storeId" method="post" enctype="multipart/form-data">
            <input type="file" name="file" class="form-control mb-2" required />
            <button type="submit" class="btn btn-success">Import Subscriptions</button>
        </form>
    </p>
}
