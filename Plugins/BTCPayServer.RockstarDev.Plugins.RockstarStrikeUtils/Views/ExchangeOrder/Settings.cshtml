@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.RockstarDev.Plugins.RockstarStrikeUtils.Data.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BTCPayServer.RockstarDev.Plugins.RockstarStrikeUtils.ViewModels.ExchangeOrder.SettingsViewModel
@{
    ViewData.SetActivePage(RockstarStrikeUtilsPlugin.PluginStrikeNavKey, "Settings Exchange Order", "ExchangeOrdersSettings");
}

<form method="post">
    <div class="sticky-header d-flex align-items-center justify-content-between">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <input type="submit" value="Update" class="btn btn-primary" id="Update" />
    </div>

    <partial name="_StatusMessage" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PercentageOfPayouts" class="form-label"></label>
                <input asp-for="PercentageOfPayouts" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="PercentageOfPayouts" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="NumberOfBuysToGroupForDeposit" class="form-label"></label>
                <input asp-for="NumberOfBuysToGroupForDeposit" type="number" step="1" class="form-control" />
                <span asp-validation-for="NumberOfBuysToGroupForDeposit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDateExchangeOrders" class="form-label"></label>
                <input asp-for="StartDateExchangeOrders" type="datetime-local" class="form-control" />
                <span asp-validation-for="StartDateExchangeOrders" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StrikeApiKey" class="form-label"></label>
                <input asp-for="StrikeApiKey" type="datetime-local" class="form-control" />
                <span asp-validation-for="StrikeApiKey" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StripeApiKey" class="form-label"></label>
                <input asp-for="StripeApiKey" type="datetime-local" class="form-control" />
                <span asp-validation-for="StripeApiKey" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MinutesHeartbeatInterval" class="form-label"></label>
                <input asp-for="MinutesHeartbeatInterval" type="number" step="1" class="form-control" />
                <span asp-validation-for="MinutesHeartbeatInterval" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
